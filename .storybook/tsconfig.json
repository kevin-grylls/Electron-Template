{
    "compilerOptions": {
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "module": "es2015",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "../",
        "outDir": "dist",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "release",
        "cert",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "**/*/*.test.ts",
        "examples"
    ]
}
